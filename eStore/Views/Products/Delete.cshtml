@model BusinessObject.models.Dto.ProductDto.ProductDTO



    <form asp-action="Delete">
        <br />
        <div class="container border p-3">
            <h1 class="text-primary">Delete Villa</h1>
            <hr />

            <input hidden asp-for="ProductId" />
            <div class="row">
                <div class="col-2">
                    <label asp-for="CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="CategoryId" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="ProductName" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Weight" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for="Weight" disabled class="form-control" rows="5"></textarea>
                </div>

                <div class="col-2">
                    <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="ImageUrl" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="UnitPrice" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="UnitPrice" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="UnitsInStock" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="UnitsInStock" disabled class="form-control" />
                </div>

               
                <div class="col-5 offset-2">
                    <a asp-action="Index" asp-controller="Products" class="btn-primary btn form-control ">Back to List</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
            </div>
        </div>
    </form>

