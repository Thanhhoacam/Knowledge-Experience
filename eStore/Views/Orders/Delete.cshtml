@model BusinessObject.models.Dto.OrderDTO.OrderDTO






<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <input hidden asp-for="OrderId" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Member.Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Member.Email" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="OrderDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="OrderDate" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="RequiredDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="RequiredDate" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ShippedDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ShippedDate" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Freight" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Freight" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Orders" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>