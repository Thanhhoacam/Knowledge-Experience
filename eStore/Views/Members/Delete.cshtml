@model BusinessObject.models.Dto.MemberDTO.MemberDTO




<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <input hidden asp-for="MemberId" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CompanyName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CompanyName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="City" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="City" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Country" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Country" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Password" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Role" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Role" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Members" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>