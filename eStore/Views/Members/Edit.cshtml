@model BusinessObject.models.Dto.MemberDTO.MemberUpdateDTO




<form asp-action="Edit">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa</h1>
        <hr />

        <input hidden asp-for="MemberId" />
        <div class="row">
            <div class="col-10">

                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-2">
                        <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="col-2">
                        <label asp-for="CompanyName" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="City" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="City" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Country" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Password" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
             @*            <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span> *@

                        <div class="input-group">
                            <input asp-for="Password" type="password" id="password" class="form-control password border-end-0" placeholder="Password..." />
                            <span class="input-group-text">
                                <i class="bi bi-eye-slash" id="togglePassword"
                                   style="cursor: pointer"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    <div class="col-2">
                        <label asp-for="Role" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Role" class="form-control" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>


                    <div class="col-5 offset-2">
                        <a asp-action="Index" asp-controller="Members" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2">
            </div>
        </div>


    </div>


</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $("#togglePassword").click(function () {
        let passwordField = $("#password");
        let type = passwordField.attr("type");

        // Đổi type input
        passwordField.attr("type", type === "password" ? "text" : "password");

        // Đổi icon
        $(this).toggleClass("bi-eye bi-eye-slash");
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
