@model BusinessObject.models.Dto.OrderDetailDTO.OrderDetailCreateDTO





<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Order Details</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="OrderId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderList"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ProductId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductList"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="UnitPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Quantity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Quantity" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Discount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="OrderDetails" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>



        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
