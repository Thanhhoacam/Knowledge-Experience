@model IEnumerable<BusinessObject.models.Dto.CategoryDTO.CategoryDTO>


<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Categories List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Categories" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Categorie</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
			
				<th>
					@Html.DisplayNameFor(model => model.CategoryName)

				</th>
				
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.CategoryName)
					</td>

					<td>
						<a asp-controller="Categories" asp-action="Edit" asp-route-CategoryId="@item.CategoryId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Categories" asp-action="Delete" asp-route-CategoryId="@item.CategoryId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>
