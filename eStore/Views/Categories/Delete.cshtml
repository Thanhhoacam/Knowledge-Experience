@model BusinessObject.models.Dto.CategoryDTO.CategoryDTO



<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Category</h1>
        <hr />

        <input hidden asp-for="CategoryId" />
        <div class="row">
           

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Categories" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>