@model BusinessObject.models.Dto.RegisterDTO.RegisterationRequestDTO


<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email..." />
            </div>

           @*  <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />

            </div> *@

            <div class="col-6 offset-3 pb-2">
                @* <input asp-for="Password" type="text" class="form-control" placeholder="Password..." /> *@
                <div class="input-group">
                    <input asp-for="Password" type="password" id="password" placeholder="Password..." class="form-control border-end-0" />
                    <span class="input-group-text bg-warning">
                        <i class="bi bi-eye-slash" id="togglePassword"
                           style="cursor: pointer"></i>
                    </span>
                </div>

            </div>
            <div class="col-6 offset-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>


</form>

<script>
    $("#togglePassword").click(function () {
        let passwordField = $("#password");
        let type = passwordField.attr("type");

        // Đổi type input
        passwordField.attr("type", type === "password" ? "text" : "password");

        // Đổi icon
        $(this).toggleClass("bi-eye bi-eye-slash");
    });
</script>